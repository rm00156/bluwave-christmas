<!doctype html>
html(lang="en")
    include common/new/header.pug
    +head("Kids Cards 4 Christams - Home")
    link(href="css/new/basic.css"  rel="stylesheet")
    link(rel="stylesheet" href="css/temp.css")
    link(rel="stylesheet" href="css/new/style.css")


    body(style="background-color:white !important;padding-top:3rem")
        script(src="https://cdn.jsdelivr.net/npm/pdfjs-dist@2.0.943/build/pdf.min.js")
        script(src="javascript/parentDashboard.js")
        include common/new/horizontalNavbar.pug
        +horizontalNavbar(user)
        //- div(id="overlay")
            div(id="firstLogin")
                
                .row
                    .col-md-6(style="padding:5px")
                        .single-banner(id="myChildsCard")
                            img(src="https://kidscards4christmas.s3.eu-west-2.amazonaws.com/generalIMage/calendar.jpg"  alt="")
                            .inner-text
                                h4 My Childs Card                
                    .col-md-6(style="padding:5px")
                        .single-banner(id="continue")
                            img(src="https://kidscards4christmas.s3.eu-west-2.amazonaws.com/generalIMage/calendar.jpg"  alt="")
                            .inner-text
                                h4 Continue
                        
        main(role="main")
             div(id="content")
                .container-fluid(style="padding-top:65px")
                    <!-- Page Heading -->
                    //- p(id="userFirstLogin" style="display:none") #{user.firstLoginFl}
                    input(style="display:none" id="kidTotal" value=kids.length)
                    input(id="kidTest" style="display:none" value=kidIds)
                    .row
                        .col-xl-8.col-lg-8
                            .row
                                .col-xl-12.col-lg-12
                                    .card.shadow.mb-4
                                        <!-- Card Header - Dropdown -->
                                        .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                                            h6.dashboard-title Lets Get Started
                                        .card-body
                                            a           
                                                .single-banner
                                                    img(src="https://kidscards4christmas.s3.eu-west-2.amazonaws.com/generalIMage/mychildscard.png"  alt="")
                    
                                                    //- .inner-text
                                                        h4 Create Your Own Card
                                            .row(style="margin-top:10px;text-align:center;")
                                                .col-sm-6(style="margin-bottom:5px")
                                                    a.site-btn(href="/createYourOwnCard" ) Create Your Own Card
                                                .col-sm-6(style="margin-bottom:5px")
                                                    a.site-btn(href="/shop?category=New Card Designs" style="background:#20c997" ) Choose From New Range of Templates
                                                //- .col-sm-4
                                                //-     a.site-btn(href="#" ) Calendars
                            .row
                                .col-xl-12.col-lg-12
                                    .card.shadow.mb-4
                                        <!-- Card Header - Dropdown -->
                                        .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                                            h6.dashboard-title My Childs Cards
                                        .card-body
                                            
                                            if(kids.length==0)
                                                a(href="/linkKids")           
                                                    .single-banner
                                                        img(src="https://kidscards4christmas.s3.eu-west-2.amazonaws.com/generalIMage/mychildscard.png"  alt="")
                        
                                                        .inner-text
                                                            h4 Link My Childs Card
                                            else
                                                table(style="width:100%")
                                                    thead(style="text-align:center")
                                                        tr
                                                            th(style=(user.accountTypeFk == 2 || user.accountTypeFk ==3 ) ? "": "width:50%;text-align:center") Card
                                                            th(style=(user.accountTypeFk == 2 || user.accountTypeFk ==3 ) ? "": "width:50%;text-align:center") Name
                                                            
                                                    tbody
                                                        each kid, index in kids
                                                            tr(id="row" + index  data-kidId=kid.id style="cursor:pointer")
                                                                td(style="width:50%")
                                                                    div(style="height:100%;width:100%;")
                                                                        canvas.canvas.shadow.mb-4(id="canvas" + index style="width:100%;height:100%;padding:5px")
                                                                td(style="width:50%;text-align:center")
                                                                    h5 #{kid.name}
                                                                
                            //- .row
                                .col-xl-4.col-lg-4
                                    .card.shadow.mb-4
                                        <!-- Card Header - Dropdown -->
                                        .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                                            h6.m-0.font-weight-bold.text-primary Your New Cards
                                        .card-body(style="cursor:pointer")           
                                            .single-banner
                                                img(src="https://kidscards4christmas.s3.eu-west-2.amazonaws.com/generalIMage/cards.jpeg"  alt="")
                    
                                                .inner-text
                                                    h4 New Cards
                                .col-xl-4.col-lg-4
                                    .card.shadow.mb-4
                                        <!-- Card Header - Dropdown -->
                                        .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                                            h6.m-0.font-weight-bold.text-primary Your Calendars
                                        .card-body(style="cursor:pointer")         
                                            .single-banner
                                                img(src="https://kidscards4christmas.s3.eu-west-2.amazonaws.com/generalIMage/calendar.jpg"  alt="")
                                                .inner-text
                                                    h4 Calendars
                                .col-xl-4.col-lg-4
                                    .card.shadow.mb-4
                                        <!-- Card Header - Dropdown -->
                                        .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                                            h6.m-0.font-weight-bold.text-primary Your Cups
                                        .card-body(style="cursor:pointer")           
                                            .single-banner
                                                img(src="https://kidscards4christmas.s3.eu-west-2.amazonaws.com/generalIMage/cups.jpg"  alt="")
                    
                                                .inner-text
                                                    h4 Cups               
                        .col-xl-4.col-lg-4
                            //- .row
                                .col-xl-12.col-lg-12
                                    .card.shadow.mb-4
                                        <!-- Card Header - Dropdown -->
                                        .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                                            h6.m-0.font-weight-bold.text-primary Products you may like
                                        .card-body           
                                            .row(style="cursor:pointer")
                                                .col-xl-5.col-lg-5
                                                    .centerImg
                                                        img(src="https://kidscards4christmas.s3.eu-west-2.amazonaws.com/generalIMage/banner-1.jpg")
                                                .col-xl-7.col-lg-7
                                                    .div(style="text-align:center")
                                                        h5 Santa Special Card
                                                        .pd-rating
                                                            i.fa.fa-star 
                                                            | 
                                                            i.fa.fa-star
                                                            | 
                                                            i.fa.fa-star
                                                            | 
                                                            i.fa.fa-star 
                                                            | 
                                                            i.fa.fa-star-o
                                                            | 
                                                            span (1)
                                                        h5 £5.99
                                            .row(style="cursor:pointer;margin-top:5px;")
                                                .col-xl-5.col-lg-5
                                                    .centerImg
                                                        img(src="https://kidscards4christmas.s3.eu-west-2.amazonaws.com/generalIMage/calendar.jpg")
                                                .col-xl-7.col-lg-7
                                                    .div(style="text-align:center")
                                                        h5 Santa Special Calendar
                                                        .pd-rating
                                                            i.fa.fa-star 
                                                            | 
                                                            i.fa.fa-star
                                                            | 
                                                            i.fa.fa-star
                                                            | 
                                                            i.fa.fa-star-o 
                                                            | 
                                                            i.fa.fa-star-o
                                                            | 
                                                            span (23)
                                                        h5 £7.99
                            .row
                                .col-xl-12.col-lg-12
                                    .card.shadow.mb-4
                                        <!-- Card Header - Dropdown -->
                                        .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                                            h6.dashboard-title What's new
                                        .card-body
                                            each categoryResult,index in categoryResults
                                                .row(id=index style="cursor:pointer"  data-id=categoryResult.id)
                                                    .col-sm-6.offset-sm-3
                                                        img.shadow(src=categoryResult.imagePath)
                                                        p #{categoryResult.name}
                                                            span(style="font-weight:700")  £#{categoryResult.price}
                                            div(style="text-align:center;")
                                                a(href="/shop?category=New Card Designs" style="color:black;font-size:18pt;font-weight:700") <u>See More</u>
                                            //- .table-responsive
                                                table.table.table-striped.table-hover
                                                    thead
                                                        tr
                                                            th Date
                                                            th Package
                                                            th Quantity
                                                            th (£) Price
                                                            th (£) Cost
                                                
                                                    tbody
                                                        each purchasedBasketItem in purchasedBasketItems
                                                            tr
                                                                - var purchaseDttm = purchasedBasketItem.purchaseDttm;
                                                                - var month = purchaseDttm.getMonth() + 1;
                                                                - month = month < 10 ? '0' + month : month;
                                                                - var days = purchaseDttm.getDate();  
                                                                - days = days <10 ? '0' + days : days;   
                                                                - var years = purchaseDttm.getFullYear();
                                                                - var hours = purchaseDttm.getHours();
                                                                - hours = hours < 10 ? '0' + hours : hours;
                                                                - var minutes = purchaseDttm.getMinutes();
                                                                - minutes = minutes < 10 ? '0' + minutes : minutes;
                                                                - purchaseDttm = years + '-' + month + '-' + days + ' ' + hours + ':' + minutes;
                                                                
                                
                                                                td #{purchaseDttm}
                                                                td #{purchasedBasketItem.name}
                                                                td #{purchasedBasketItem.quantity}
                                                                td #{purchasedBasketItem.price}
                                                                td #{(parseFloat(purchasedBasketItem.cost)).toFixed(2)}
                                                        if(totalDelivery > 0)
                                                            tr
                                                                td
                                                                td Delivery
                                                                td
                                                                td
                                                                td #{totalDelivery} 
                                                    tfoot
                                                        tr
                                                            td
                                                            td
                                                            td
                                                            td (£) Total
                                                            td #{totalCost}
    include common/new/footer.pug
    +footer()
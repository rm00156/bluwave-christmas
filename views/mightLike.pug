doctype html
head
    include common/revised/normalHeader.pug
    include common/revised/navbar.pug
    include common/revised/footer.pug
    +head("You Might Also Like")
    link(href='assets2/css/style.css' rel='stylesheet')   
    link#app-style(href='assets/css/app-creative.min.css' rel='stylesheet' type='text/css')
    link(href="assets/css/test.css" rel='stylesheet' type='text/css')  
body                                               
    +navbar().mb-5

    section.section
        .container.mt-5
            h1(style="text-align:center") You May Also Like
            .row(style="margin-top:10px")
                input#numberOfProducts(value=products.length style="display:none")
                each product, index in products
                    .col-12.col-md-6.col-lg-4
                        // Item
                        .position-relative
                            div.card.border.mb-3(style="cursor:pointer" id="product" + index data-href='/productItem?productNumber=' + product.productNumber + (product.productItemNumber != null ? '&productItemNumber=' + product.productItemNumber + '&productVariantId=' + product.productVariantId : ''))
                                // Image
                                div(style="height:300px")
                                    img.p-3.card-img.shadow(src=product.displayImagePath alt='...'  style="object-fit:scale-down;height:inherit")
                                // Body
                                .card-body
                                    .row.align-items-center.mb-3
                                        .col
                                            // Heading
                                            h4.card-title.mb-0
                                                | #{product.name}
                                        .col-auto
                                            p.mb-0.text-sm.text-muted
                                                | from Â£#{(parseFloat(product.price)).toFixed(2)}
            
            
            .row(style="text-align:center;width:100%")
                .position-relative(style="text-align:-webkit-center;text-align:-moz-center;width:100%")
                    a.btn.btn-outline-primary.btn-block(href="/basket" style="width:200px;text-align:center") Continue To Basket


            
                                    
                
                                    







    +footer()   
    <script src="assets2/libs/jquery/dist/jquery.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCnKt8_N4-FKOnhI_pSaDL7g_g-XI1-R9E"></script>
                     
    <script src="assets2/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="assets2/libs/flickity/dist/flickity.pkgd.min.js"></script>
    script(src="assets2/js/theme.min.js")
    script(src="https://cdn.jsdelivr.net/npm/pdfjs-dist@2.0.943/build/pdf.min.js")
    script(src="https://cdn.jsdelivr.net/npm/exif-js")
    script(src="javascript/new/shop.js")

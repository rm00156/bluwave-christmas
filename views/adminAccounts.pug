doctype html
head
    include ./common/revised/adminHead.pug
    include ./common/revised/adminSideBar.pug
    include ./common/revised/adminTopBar.pug
    include ./common/revised/adminFooter.pug
    include ./common/revised/adminSetting.pug
    include ./common/revised/adminScripts.pug
    <!-- Datatables css -->
    
    +head("Accounts")
    <link href="assets/css/vendor/dataTables.bootstrap5.css" rel="stylesheet" type="text/css" />
    <link href="assets/css/vendor/responsive.bootstrap5.css" rel="stylesheet" type="text/css" />
    <!-- third party css end -->


#preloader
    #status
        .bouncing-loader
            div
            div
            div     
// Begin page
.wrapper

    +sidebar()
    .content-page
        .content
            +topbar()
            .container-fluid
                // start page title
                .row
                    .col-12
                        .page-title-box
                            h4.page-title Accounts
                
                .row
                    .card
                        .card-body
                            .row.mb-2
                                .col-xl-8
                                    .row.gy-2.gx-2.align-items-center.justify-content-xl-start.justify-content-between
                                        .col-lg-4
                                            label(for='accountNumber') Account Number
                                            input#accountNumber.form-control(type='search')
                                        .col-lg-4
                                            label(for='name') Name
                                            input#name.form-control(type='search')
                                        .col-lg-4
                                            label(for='email') Email
                                            input#email.form-control(type='search')
                                        
                                        .col-lg-4
                                            label.me-2(for='accountType') Account Types
                                            select#accountType.form-select
                                                option(value=0 selected='')
                                                each accountType in accountTypes
                                                    option(value=accountType.id) #{accountType.accountType}

                                        .col-lg-4
                                            label.me-2(for='createdFrom') Created From Dt
                                            input#createdFrom.form-control(type='date')
                                        
                                        .col-lg-4
                                            label.me-2(for='createdTo') Created To Dt
                                            input#createdTo.form-control(type='date')
                                        
                                        .col-lg-4
                                            label.me-2(for='phoneNumber') Phone Number
                                            input#phoneNumber.form-control(type='text')
                                .col-xl-4
                                    .text-xl-end.mt-xl-0.mt-2
                                        button#search.btn.btn-success.mb-2.me-2(type='button')
                                            |  Search
                                        
                                        button#clear.btn.btn-danger.mb-2.me-2(type='button')
                                            |  Clear
                                            

                            
                            .row.mb-2
                                table#accountTable.table.table-striped.dt-responsive.nowrap.w-100(style="cursor:pointer")
                                    thead
                                        tr
                                        th Account Number
                                        th Name
                                        th Email
                                        th Account Type
                                        th Phone Number 
                                        th Created Dt
                                    tbody
                                    
                                    
                                        

        
    +footer()
+setting()


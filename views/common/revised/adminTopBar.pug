mixin topbar()
    .navbar-custom
        ul.list-unstyled.topbar-menu.float-end.mb-0
            li.dropdown.notification-list.d-lg-none
                a.nav-link.dropdown-toggle.arrow-none(data-bs-toggle='dropdown' href='#' role='button' aria-haspopup='false' aria-expanded='false')
                    i.dripicons-search.noti-icon
                .dropdown-menu.dropdown-menu-animated.dropdown-lg.p-0
                    form.p-3
                        input.form-control(type='text' placeholder='Search ...' aria-label="Recipient's username")
            
            li.dropdown.notification-list
                a.nav-link.dropdown-toggle.arrow-none(data-bs-toggle='dropdown' href='#' role='button' aria-haspopup='false' aria-expanded='false')
                    i.dripicons-bell.noti-icon
                    //- span.noti-icon-badge
                .dropdown-menu.dropdown-menu-end.dropdown-menu-animated.dropdown-lg
                    // item
                    .dropdown-item.noti-title.px-3
                        h5.m-0
                            span.float-end
                                a.text-dark(href='javascript: void(0);')
                                    small Clear All
                            | Notification
                    .px-3(style='max-height: 300px;' data-simplebar='')
                        h5.text-muted.font-13.fw-normal.mt-0 Today
                        // item
                        a.dropdown-item.p-0.notify-item.card.unread-noti.shadow-none.mb-2(href='javascript:void(0);')
                            .card-body
                                span.float-end.noti-close-btn.text-muted
                                    i.mdi.mdi-close
                                .d-flex.align-items-center
                                    .flex-shrink-0
                                        .notify-icon.bg-primary
                                            i.mdi.mdi-comment-account-outline
                                    .flex-grow-1.text-truncate.ms-2
                                        h5.noti-item-title.fw-semibold.font-14
                                            | Datacorp 
                                            small.fw-normal.text-muted.ms-1 1 min ago
                                        small.noti-item-subtitle.text-muted Caleb Flakelar commented on Admin
                    
                    
                    
                    // All
                    a.dropdown-item.text-center.text-primary.notify-item.border-top.border-light.py-2(href='javascript:void(0);')
                        | View All
            
            li.notification-list
                a.nav-link.end-bar-toggle(href='javascript: void(0);')
                    i.dripicons-gear.noti-icon
            li.dropdown.notification-list
                a.nav-link.dropdown-toggle.nav-user.arrow-none.me-0(data-bs-toggle='dropdown' href='#' role='button' aria-haspopup='false' aria-expanded='false')
                    span.account-user-avatar
                        img.rounded-circle(src='img/user.png' alt='user-image')
                    span
                        if(user.name != null)
                            span.account-user-name #{user.name}
                        else 
                            span.account-user-name #{user.email}
                        span.account-position Admin
                .dropdown-menu.dropdown-menu-end.dropdown-menu-animated.topbar-dropdown-menu.profile-dropdown
                    // item
                    .dropdown-header.noti-title
                        h6.text-overflow.m-0 Welcome !
                        // item
                    a.dropdown-item.notify-item(href='javascript:void(0);')
                        i.mdi.mdi-account-circle.me-1
                        span My Account
                    // item
                    a.dropdown-item.notify-item(href='javascript:void(0);')
                        i.mdi.mdi-account-edit.me-1
                        span Settings
                    // item
                    a.dropdown-item.notify-item(href='javascript:void(0);')
                        i.mdi.mdi-lifebuoy.me-1
                        span Support
                    // item
                    a.dropdown-item.notify-item(href='javascript:void(0);')
                        i.mdi.mdi-lock-outline.me-1
                        span Lock Screen
                    // item
                    a.dropdown-item.notify-item(href='/logout') 
                        i.mdi.mdi-logout.me-1
                        span Logout 
        button.button-menu-mobile.open-left.disable-btn
            i.mdi.mdi-menu
        input#background(style="display:none" value=backgroundSetting.value)
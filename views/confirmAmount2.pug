doctype html
head
    include common/revised/normalHeader.pug
    include common/revised/navbar.pug
    include common/revised/footer.pug
    +head("Confirm Amounts")
    link(href='assets2/css/style.css' rel='stylesheet')   
    <link href="assets/css/vendor/britecharts.min.css" rel="stylesheet" type="text/css" />
    link#app-style(href='assets/css/app-creative.min.css' rel='stylesheet' type='text/css')
    link(href="assets/css/test.css" rel='stylesheet' type='text/css')
    <link href="assets/css/vendor/dataTables.bootstrap5.css" rel="stylesheet" type="text/css" />
    <link href="assets/css/vendor/responsive.bootstrap5.css" rel="stylesheet" type="text/css" />

body
    +navbar()
    section.section.section-full.bg-light
        // Content
        .container
            h2.mb-5 Confirm Total Amount To Be Given Back
            .row 
                .col-sm-8
                    each schoolClass, index in classes 
                        .row
                            .card.shadow
                                .card-header 
                                    h3 #{schoolClass.name}
                                .card-body.text-center
                                    table.table.table-responsive.mb-0.w-100
                                        thead
                                                tr.text-center
                                                    th Package
                                                    th Quantity
                                                    th (£) Total
                                                    th (£) Give Back Amount Per Purchase
                                                    th (£) Total Give Back Amount
                                        tbody
                                                tr
                                                    td Standard Pack
                                                    td #{schoolClass.standardPackQuantity}
                                                    td #{schoolClass.standardTotalCost}
                                                    td #{schoolClass.standardPackGiveBackPer}
                                                    td #{schoolClass.standardPackGiveBack}
                                                tr
                                                    td Photo Pack
                                                    td #{schoolClass.photoPackQuantity}
                                                    td #{schoolClass.photoTotalCost}
                                                    td #{schoolClass.photoPackGiveBackPer}
                                                    td #{schoolClass.photoPackGiveBack}
                                                tr
                                                    td Calendar
                                                    td #{schoolClass.calendarQuantity}
                                                    td #{schoolClass.calendarTotalCost}
                                                    td #{schoolClass.calendarGiveBackPer}
                                                    td #{schoolClass.calendarGiveBack} 

                                                tr
                                                    td
                                                    td
                                                    td
                                                    td
                                                        h5.text-muted (£) Total
                                                    td 
                                                        h5.text-muted #{schoolClass.giveBackTotal}        
                     
                            
                .col-sm-4
                    .card.shadow
                        .card-header 
                            h5.text-center (£) Total Amount To Be Given Back
                        .card-body.text-center

                            h1 £ #{totalGiveBackAmount}
                            if(charityAmount.confirmedFl == false)
                                a.btn.btn-outline-primary.mt-3(href="/submit_bank_details") Confirm Amount
                            else 
                                h5.text-success CONFIRMED
                    

    +footer()        
